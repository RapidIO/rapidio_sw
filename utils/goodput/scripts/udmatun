isol
set cpu1 ? -1
// 0=DMAChannel, 1=libmport
set dma_method ? 0
set thruput ? 0
thread 0 -1 0
wait 0 h
sleep 0.5
IBAlloc 0 4000000
st i
//XXX When using Mport only 4M can be used here
//IBAlloc 0 400000
sleep 0.5
// Kernel drivers/net/tun.c has 64k as upper bound in mainline
set mtu ? 8000
set chan ? 6
tundma 0 $cpu1 $chan 6 7 $buf $sts $mtu $dma_method $thruput
sleep 0
